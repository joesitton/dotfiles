# Sudo
alias sudo='sudo '
alias _='sudo'
alias pls='sudo $(fc -ln -1)'

# Pacman
alias pac='sudo pacman'
alias pacs='yay -Ss'
alias pacl='pac -Qil'
alias pacin='pac -S'
alias pacinfo='pac -Si'
alias paco='pac -Qo'
alias pacrm='pac -Rsc'
alias pacup='pac -Syy'
alias pacupg='pac -Syyu'

alias aurin='yay -S --noeditmenu --nodiffmenu'

# Ansible
alias ap='ansible-playbook'
alias ac='ansible-console'

# Docker
alias d='docker'
alias dps='d ps --format '\''table {{.ID}}\t{{.Names}}\t{{.Image}}\t{{.Status}}'\'
alias drm='d rm -f'

# ls
if [ "$(command -v exa)" ]; then
  alias ls='exa --color=auto --group-directories-first -F --sort extension --color-scale'
  alias ll='ls -lhg@ --git'
  alias la='ll -a --git'
  alias lS='ll --sort size -r'
  alias lt='la -T -L 3 -I "node_modules|__pycache__|.git|.env|.venv|env|venv"'
else
  alias ls='ls --color=auto --group-directories-first -F -X'
  alias ll='ls -lh'
  alias la='ls -lAh'
fi

alias dirs='dirs -v'

# vim
if [ "$(command -v nvim)" ]; then
   alias v='nvim'
   alias vi='nvim'
   alias vim='nvim'
fi

# tmux
alias tmux='tmux -2'
alias t='tmux'
alias tat='tmux a -t'

# wezterm
alias wez='wezterm'

# make dir and cd in
mkcd() {
  mkdir -p $1
  cd $1
}

# sudo group write access
gimme() {
    sudo chgrp sudo $@
    sudo chmod g+w $@
}

# auto ls
chpwd() {
    ls;
}

# vim: ft=zsh
