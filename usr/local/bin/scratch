#!/bin/bash

create_scratch() {
    echo "Creating scratch window"

    alacritty --title Scratch >/dev/null &
    pid=$!

    echo $pid > /tmp/scratch.pid

    while ! xdo id -N Alacritty -a Scratch >/dev/null; do sleep 1; done

    wid=$(xdo id -N Alacritty -a Scratch)

    bspc node $wid -g hidden
    bspc node $wid -f
}

if [[ ! -f /tmp/scratch.pid ]]; then
    create_scratch
    exit
fi

if ! ps -p $(cat /tmp/scratch.pid) > /dev/null; then
    create_scratch
    exit
fi

while ! xdo id -N Alacritty -a Scratch; do sleep 1; done

wid=$(xdo id -N Alacritty -a Scratch)

if [[ $wid == "0x0" ]]; then
    create_scratch
    exit
fi

bspc node $wid -g hidden
bspc node $wid -f
