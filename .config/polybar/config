[colors]
background = #dd181818
foreground = #e8e8e8
red = #AB4642
green = #A1B56C
yellow = #F7CA88
blue = #7CAFC2
purple = #BA8BAF
orange = #DC9565
black1 = #181818
black2 = #282828
black3 = #383838
black4 = #484848
black5 = #585858
black6 = #686868

[bar/top]
background = ${colors.background}
foreground = ${colors.foreground}
height = 60
padding = 4
underline-size = 4
module-margin = 2
tray-position = none
override-redirect = false
wm-restack = bspwm
fixed-center = true
bottom = true

font-0 = "Fira Sans Condensed:size=14;3"
font-1 = "Iosevka Custom:size=14;3"

modules-left = logo bspwm title
modules-center =
modules-right = updates weather network brightness audio battery date

[module/updates]
type = custom/script
exec-if = [ "$(pacman -Qu | wc -l)" -gt 0 ]
exec = echo "$(pacman -Qu | wc -l)  "
interval = 5

format =   <label>

click-left = updates

[module/logo]
type = custom/text
content = 
content-foreground = ${colors.blue}

[module/bspwm]
type = internal/bspwm
enable-click = true

format = <label-state>

label-focused-foreground = ${colors.blue}
label-focused-underline = ${colors.blue}
label-focused-padding = 2

label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 2

label-urgent-foreground = ${colors.red}
label-urgent-padding = 2

label-empty-foreground = ${colors.black5}
label-empty-padding = 2

[module/bspwmmodes]
type = internal/bspwm

format = <label-mode>

label-locked = 
label-locked-foreground = ${colors.yellow}
label-locked-alignment = center
label-locked-padding = 1

label-sticky = 
label-sticky-foreground = ${colors.green}
label-sticky-alignment = center
label-sticky-padding = 1

label-marked = 
label-marked-foreground = ${colors.red}
label-marked-alignment = center
label-marked-padding = 1

[module/title]
type = internal/xwindow

format = <label>

label = %title%
label-maxlen = 80
label-alignment = center

[module/date]
type = custom/script
interval = 60

exec = date '+%b %d,  %-I:%M %P'
tail = true

[module/battery]
type = internal/battery
full-at = 90

time-format = %-H hr

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.red}

ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.orange}

ramp-capacity-2 = 
ramp-capacity-2-foreground = ${colors.yellow}

ramp-capacity-3 = 
ramp-capacity-3-foreground = ${colors.green}

ramp-capacity-4 = 
ramp-capacity-4-foreground = ${colors.green}

format-full = <label-full>
label-full = 
label-full-padding = 1

format-discharging = <ramp-capacity>  <label-discharging>
format-discharging-prefix = "  "
label-discharging = %percentage%%

format-charging = <animation-charging>  <label-charging>
format-charging-prefix = " "
label-charging = %percentage%%

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.green}

animation-charging-framerate = 1500

[module/network]
type = internal/network
interface = wlp0s20f3
interval = 3

format-connected = <label-connected>
format-connected-prefix = 
format-connected-prefix-padding = 2
label-connected = %essid%

format-disconnected =   Offline
format-disconnected-foreground = ${colors.black5}

[module/audio]
type = internal/alsa
enable-scroll = false

ramp-volume-0 = 
ramp-volume-1 = 

format-volume = <ramp-volume>  <label-volume>
label-volume = %percentage%%

format-muted =   <label-volume>
format-muted-foreground = ${colors.black6}

[module/cpu]
type = internal/cpu

format-prefix = 
format-prefix-foreground = ${colors.yellow}
format-prefix-padding = 2

[module/ram]
type = internal/memory

format-prefix = 
format-prefix-foreground = ${colors.purple}
format-prefix-padding = 2

label = %gb_used%

[module/separator]
type = custom/text
content = │
content-prefix = " "
content-prefix-padding = 1
content-foreground = ${colors.black5}

[module/filesystem]
type = internal/fs
interval = 60

mount-0 = /

format-mounted-prefix = 
format-mounted-prefix-padding = 2
format-mounted-prefix-foreground = ${colors.blue}
format-mounted = <label-mounted>
label-mounted = %percentage_used%%

[module/crypto]
type = custom/script
exec = printf "%'.2f\\n" "$(curl -s rate.sx/1btc)"
interval = 60

format = $ <label>
format-prefix = ﴑ
format-prefix-foreground = ${colors.orange}
format-prefix-padding = 2

[module/brightness]
type = internal/xbacklight
enable-scroll = false

format = <label>
format-padding = 1

label = 盛 %percentage%%

[module/weather]
type = custom/script
exec = wedder -c $HOME/.config/polybar/wedder.toml
tail = true

format = <label>

