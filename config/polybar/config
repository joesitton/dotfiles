[colors]
background = #282828
foreground = #e8e8e8
red = #AB4642
green = #A1B56C
yellow = #F7CA88
blue = #7CAFC2
purple = #BA8BAF
orange = #DC9565
black1 = #181818
black2 = #282828
black3 = #383838
black4 = #484848
black5 = #585858
black8 = #f8f8f8
gray = #d8d8d8

[bar/top]
background = ${colors.background}
foreground = ${colors.foreground}
height = 32
padding = 4
underline-size = 4
module-margin = 2
tray-position = right
wm-restack = bspwm

# separator = │
# separator-foreground = ${colors.black5}

font-0 = "Fira Sans Compressed:size=14;3"
font-1 = "Iosevka Nerd Font:size=14;3"

modules-left = logo bspwm title
modules-center = date
modules-right = network-down network-up filesystem cpu ram

[module/logo]
type = custom/text
content = 
content-foreground = ${colors.blue}

[module/bspwm]
type = internal/bspwm
enable-click = true

label-focused-foreground = ${colors.blue}
label-focused-underline = ${colors.blue}
label-focused-padding = 2

label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 2

label-urgent-foreground = ${colors.red}
label-urgent-padding = 2

label-empty-foreground = ${colors.black5}
label-empty-padding = 2

[module/title]
type = internal/xwindow
label-maxlen = 250

format-prefix = │
format-prefix-foreground = ${colors.black5}
format-prefix-padding-right = 4

[module/date]
type = internal/date
date = %B %d
time = %I:%M %P

label = %date% at %time%
label-foreground = ${colors.foreground}

[module/network-down]
type = internal/network
interface = ens33
interval = 1

format-connected-prefix = 
format-connected-prefix-foreground = ${colors.red}
format-connected-prefix-padding = 2
label-connected = %downspeed%

[module/network-up]
type = internal/network
interface = ens33
interval = 1

format-connected-prefix = 
format-connected-prefix-foreground = ${colors.green}
format-connected-prefix-padding = 2
label-connected = %upspeed%

[module/filesystem]
type = internal/fs
interval = 60

mount-0 = /

format-mounted-prefix = 
format-mounted-prefix-padding = 2
format-mounted-prefix-foreground = ${colors.blue}
format-mounted = <label-mounted>
label-mounted = %percentage_used%%

[module/cpu]
type = internal/cpu

format-prefix = 龍
format-prefix-foreground = ${colors.yellow}
format-prefix-padding = 2

[module/ram]
type = internal/memory

format-prefix = 
format-prefix-foreground = ${colors.blue}
format-prefix-padding = 2

label = %gb_used%

[module/crypto]
type = custom/script
exec = printf "%'.2f\n" "$(curl -s rate.sx/1btc)"
interval = 60

format = $ <label>
format-prefix = ﴑ
format-prefix-foreground = ${colors.orange}
format-prefix-padding = 2

