# terminal
ctrl + shift + Return
    alacritty

# move to workspace n
alt + {1,2,3,4,5}
    bspc desktop -f {1,2,3,4,5}

# window switcher
# alt + Tab
#     rofi -show window

# app launcher
alt + space
    rofi -show drun

super + alt + space
    rofi -show ssh

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# quit bspwm
super + alt + {q,r}
    bspc {quit, wm -r}

# close and kill
ctrl + shift + {w,x}
    bspc node -{c,k}

# move windows
ctrl + alt + {h,j,k,l}
    bspc node -s {west,south,north,east}

# clear preselections
# ctrl + alt + space
#     bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# tiled and monocle
ctrl + shift + m
    bspc desktop -l next

# swap current and biggest
ctrl + shift + g
    bspc node -s biggest.local

# window state
ctrl + shift + {s,t,d,f}
    bspc node -t {floating,tiled,pseudo_tiled,fullscreen}

# change desktop
ctrl + shift + bracket{left,right}
    bspc desktop -f {prev,next}

# change window focus
ctrl + shift + {h,j,k,l}
    bspc node -f {west,south,north,east}

# move a window to workspace n
super + alt + {1-5}
    bspc node -d {1-5}

# ctrl + shift + {minus, equal, 0}
#     bspc node -l {below, normal, above}

# ctrl + shift + i
#     bspc node -f last.below.local && bspc node -l normal
