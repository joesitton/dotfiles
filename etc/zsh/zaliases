# Sudo
alias _='sudo'
alias pls='sudo $(fc -ln -1)'

# Pacman
alias pac='sudo pacman'
alias pacs='yay -Ss'
alias paci='pac -Qil'
alias pacin='pac -S'
alias pacrm='pac -Rsc'
alias pacup='pac -Syy'
alias pacupg='pac -Syyu'
alias pacprune='pac -Rsn $(pac -Qqtd)'

alias aurin='yay -S --noeditmenu --nodiffmenu'

# Ansible
alias ap='ansible-playbook'
alias ac='ansible-console'

# Docker
alias dps='docker ps --format '\''table {{.ID}}\t{{.Names}}\t{{.Image}}\t{{.Status}}'\'
alias drm='docker rm -f'
alias dprune='docker images | grep none | awk '\''{print $3}'\'' | xargs docker rmi -f'

# Git
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m'
alias gp='git push'
alias gd='git diff'
alias gdc='git diff --cached'
alias gl='git log --oneline'

# Other
alias mkvenv='python -m venv venv && source venv/bin/activate'
alias n='nnn -deH'
alias p='pueue'

# ls
if [ "$(command -v exa)" ]; then
  alias ls='exa --color=auto --group-directories-first -F --sort extension --color-scale'
  alias ll='ls -lhg@ --git'
  alias la='ll -a --git'
  alias lS='ll --sort size -r'
  alias lt='la -T -L 3 -I "node_modules|__pycache__|.git|.venv|.env|venv|env"'
else
  alias ls='ls --color=auto --group-directories-first -F -X'
  alias ll='ls -lh'
  alias la='ls -lAh'
fi

# vim
if [ "$(command -v nvim)" ]; then
   alias vim='nvim'
   alias v='vim'
fi

# sudo group write access
gimme() {
    sudo chgrp -R sudo $@
    sudo chmod -R g+w $@
}

# auto ls
chpwd() {
    ls;
}

# vim: ft=zsh
